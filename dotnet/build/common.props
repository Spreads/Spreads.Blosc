<Project>
    <PropertyGroup>
        <VersionPrefix>1.0.0</VersionPrefix>
        <VersionSuffix>beta</VersionSuffix>
        <VersionSuffix Condition="'$(VersionSuffix)' != '' And '$(BuildNumber)' != ''">$(VersionSuffix)-$(BuildNumber)</VersionSuffix>
        <PackageTags>Spreads Native LZ4 Zstd Zlib GZip Unsafe</PackageTags>
        <Product>Spreads</Product>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/Spreads/Spreads.Native.git</RepositoryUrl>
        <Authors>Victor Baybekov</Authors>
        <Company />
        <Copyright>Victor Baybekov</Copyright>
        <PackageLicenseUrl>https://github.com/Spreads/Spreads.Native/blob/master/LICENSE.txt</PackageLicenseUrl>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>$(NoWarn),1591</NoWarn>
        <SignAssembly>true</SignAssembly>
        <PublicSign Condition=" '$(OS)' != 'Windows_NT' ">true</PublicSign>
        <AssemblyOriginatorKeyFile>..\..\tools\SpreadsKey.snk</AssemblyOriginatorKeyFile>
        <DelaySign>false</DelaySign>
        <DebugType>embedded</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
        <PackageIconUrl>https://raw.githubusercontent.com/DataSpreads/Docs/master/images/Spreads/Spreads_64.png</PackageIconUrl>
    </PropertyGroup>

    <PropertyGroup>
        <DefineConstants>$(DefineConstants);SPREADS</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
        <DefineConstants>$(DefineConstants);TRACE;DEBUG</DefineConstants>
    </PropertyGroup>
</Project>